<Window x:Class="InventoryApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Envanter Yönetim Sistemi - Giriş" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        KeyDown="Window_KeyDown">
    
    <Border CornerRadius="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Image/Branding -->
            <Border Grid.Column="0" Background="#2C3E50" CornerRadius="20,0,0,20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📦" FontSize="120" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <TextBlock Text="ENVANTER YÖNETİM SİSTEMİ" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="20,0"/>
                    <TextBlock Text="Modern ve Güvenli İşletme Çözümü" 
                               FontSize="16" 
                               Foreground="#BDC3C7" 
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Right Side - Login Form -->
            <Grid Grid.Column="1" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Close Button -->
                <Button Grid.Row="0" 
                        Content="✕" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Width="30" Height="30"
                        Background="Transparent" 
                        BorderThickness="0"
                        FontSize="16" 
                        Foreground="#7F8C8D"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
                
                <!-- Login Form -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <!-- Title -->
                    <TextBlock Text="Hoş Geldiniz!" 
                               FontSize="32" FontWeight="Bold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Hesabınıza giriş yapın" 
                               FontSize="16" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>
                    
                    <!-- Username Field -->
                    <TextBlock Text="Kullanıcı Adı" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="8" Margin="0,0,0,20">
                        <TextBox x:Name="UsernameTextBox"
                                 Height="45" 
                                 BorderThickness="0"
                                 FontSize="14"
                                 Padding="15,0"
                                 VerticalContentAlignment="Center"
                                 Background="Transparent">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="👤 Kullanıcı adınızı girin" 
                                                                       Foreground="#BDC3C7" 
                                                                       FontSize="14" 
                                                                       Margin="15,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                    
                    <!-- Password Field -->
                    <TextBlock Text="Şifre" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="8" Margin="0,0,0,30">
                        <PasswordBox x:Name="PasswordBox"
                                     Height="45" 
                                     BorderThickness="0"
                                     FontSize="14"
                                     Padding="15,0"
                                     VerticalContentAlignment="Center"
                                     Background="Transparent"/>
                    </Border>
                    
                    <!-- Remember Me -->
                    <CheckBox x:Name="RememberMeCheckBox" 
                              Content="Beni Hatırla" 
                              Foreground="#7F8C8D"
                              Margin="0,0,0,30"/>
                    
                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                            Content="🔐 GİRİŞ YAP" 
                            Height="50"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="LoginButton_Click"
                            Margin="0,0,0,15">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Register Button -->
                    <Button x:Name="RegisterButton"
                            Content="👤 KAYIT OL" 
                            Height="50"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="RegisterButton_Click"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Forgot Password -->
                    <TextBlock Text="Şifremi Unuttum" 
                               FontSize="14" 
                               Foreground="#3498DB"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                
                <!-- Footer -->
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <Separator Margin="0,0,0,15"/>
                    <TextBlock Text="© 2025 Envanter Yönetim Sistemi" 
                               FontSize="12" 
                               Foreground="#BDC3C7"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="v1.0.0" 
                               FontSize="10" 
                               Foreground="#BDC3C7"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>